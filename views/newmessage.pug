extends layout

block content
    
    if errors && errors.length > 0
     div(class="error-container")
      ul
      each error in errors
       li(class="error-message")
        span #{error.msg}

    form.login(action="/newmessage", method="POST")
        p.title Send a message
        div.formcomponent
            label(for="title") Title
            input(type="text"
                  name="title"
                  value=(formInfo ? formInfo.title : ''))
        div.formcomponent
            label(for="body") Content
            textarea(name="body"
                  value=(formInfo ? formInfo.body : ''))

        button.formbutton(type="submit") Send